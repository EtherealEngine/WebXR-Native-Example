{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "es2019",
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "module": "esnext",
    "strict": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "outDir": "./lib"
  },
  "exclude": [
    "node_modules",
    "tests/**"
  ],
  "include": [ "./**/*.ts", "./**/*.tsx" ]
}
